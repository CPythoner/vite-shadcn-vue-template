    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "scripts/**/*",
    "src/lib/db.ts",
    "server/**/*"
  ]
}
